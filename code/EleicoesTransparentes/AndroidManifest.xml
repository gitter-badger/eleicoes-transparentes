<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufba.mata62.eleicoestransparentes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/et_theme" >
        
        <activity android:name=".Splash"
            		android:label="@string/app_name">
            	<intent-filter >
            	    <action android:name="android.intent.action.MAIN"/>
            	    <category android:name="android.intent.category.LAUNCHER"/>
            	</intent-filter>
        
        </activity>
        
        <activity
            android:name="br.ufba.mata62.eleicoestransparentes.ui.activities.MenuInicial"
            android:label="@string/app_name" >
            <intent-filter>
                
                <action android:name="android.intent.action.MENUINICIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="br.ufba.mata62.eleicoestransparentes.ui.activities.VisualizarPrestacaoDeContas"
            android:label="@string/app_name" >
            <intent-filter>
                
                <action android:name="android.intent.action.VISUALIZARPRESTACAODECONTAS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
   br.ufba.mata62.eleicoestransparentes.ui.activities.MainActivity <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
